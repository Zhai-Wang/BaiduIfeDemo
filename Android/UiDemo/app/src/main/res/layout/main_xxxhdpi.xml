<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context="com.mouzhai.uidemo.MainActivity">

    <LinearLayout
        android:layout_width="75dp"
        android:layout_height="62.5dp"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="12.5dp"
                android:layout_height="15dp"
                android:gravity="center"
                android:text="@string/money"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="62.5dp"
                android:layout_height="15dp"
                android:gravity="center"
                android:text="@string/_200_00"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="9.5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="2.5dp"
                android:layout_weight="1"
                android:background="#ffffff" />

            <TextView
                android:layout_width="0px"
                android:layout_height="9.5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/click_to_get"
                android:textColor="#ffffff"
                android:textSize="5sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="2.5dp"
                android:layout_weight="1"
                android:background="#ffffff" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="62.5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="135dp"
            android:layout_height="11dp"
            android:layout_marginEnd="7.5dp"
            android:layout_marginStart="7.5dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="10sp"
            android:maxLines="1"
            android:text="@string/content" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="8.5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="7.5dp"
            android:layout_marginStart="7.5dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:hint="@string/_2017_3_8_00_00_00"
            android:textSize="7.5dp" />
    </LinearLayout>
</LinearLayout>
